				        System.out.println("2. Áo nữ");
				        System.out.println("3. Quần nam");
				        System.out.println("4. Quần nữ");
				        System.out.print("Nhập lựa chọn của bạn (1-4): ");
				        int loai2 = sc.nextInt();
