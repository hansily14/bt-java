				    case 2:
				        System.out.println("Danh sách áo nữ:");
				        kho.xuatThongTin();
				        break;
				    case 3:
				        System.out.println("Danh sách quần nam:");
				        kho.xuatThongTin();
				        break;
				    case 4:
				        System.out.println("Danh sách quần nữ:");
				        kho.xuatThongTin();
				        break;
				    default:
				        System.out.println("Lựa chọn không hợp lệ!");
				    }
				        break;
		   
				    case 3:
