				switch (chon) {
				case 1:
					
				    System.out.println("Bạn muốn thêm sản phẩm loại nào?");
				    System.out.println("1. Áo nam");
				    System.out.println("2. Áo nữ");
				    System.out.println("3. Quần nam");
