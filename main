				            {
				            	System.out.println("nhap mã sp càn xóa");
				            	String Ma= sc.nextLine();
				                Aonu anu = new Aonu();
				                System.out.println("Xóa áo nữ thành công"+ kho.xoaThongTin(Ma));
				                break;
				            }
