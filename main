				            Aonu anu = new Aonu();
				            anu.nhapthongtin();
				            kho.themAonu(anu);
				            System.out.println("Thêm áo nữ thành công!");
				            break ;
				        }
				            
				        case 3: {
				            Quannam qnam = new Quannam();
				            qnam.nhapthongtin();
				            kho.themQuannam(qnam);
				            System.out.println("Thêm quần nam thành công!");
