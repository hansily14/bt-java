				            	System.out.println("nhap mã sp càn xóa");
				            	String Ma= sc.nextLine();
				                Quannu qnu = new Quannu();        
				                System.out.println("Xóa quần nữ thành công"+kho.xoaThongTin(Ma));
				                break;
				         
				        }
				           
				        }break;
	       	     
